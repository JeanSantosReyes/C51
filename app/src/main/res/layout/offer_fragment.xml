<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".page.OfferFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".page.OfferFragment">

    <ImageView
        android:id="@+id/offerImageView"
        android:layout_width="324dp"
        android:layout_height="201dp"
        android:layout_marginBottom="41dp"
        android:layout_weight="1"
        android:contentDescription="@string/offer_image_description"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/offerTitleDetailText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/offerTitleDetailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="40dp"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/offerCashBackDetailText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offerImageView" />

    <TextView
        android:id="@+id/offerCashBackDetailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="19dp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/offerIdDetailText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offerTitleDetailText" />

    <TextView
        android:id="@+id/offerIdDetailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/offerShareButton"
        app:layout_constraintStart_toStartOf="@+id/offerCashBackDetailText"
        app:layout_constraintTop_toBottomOf="@+id/offerCashBackDetailText">
    </TextView>

    <Button
        android:id="@+id/offerShareButton"
        android:layout_width="138dp"
        android:layout_height="37dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="42dp"
        android:background="@android:color/holo_red_light"
        android:text="@string/share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offerIdDetailText" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
